{
    "name": "RSI + SMA Crossover",
    "description": "Buy when RSI is oversold and price crosses above SMA, sell when RSI is overbought and price crosses below SMA",
    "version": "1.0.0",
    "indicators": [
        {
            "id": "rsi_14",
            "type": "rsi",
            "params": {
                "period": 14,
                "source": "close"
            }
        },
        {
            "id": "sma_50",
            "type": "sma",
            "params": {
                "period": 50,
                "source": "close"
            }
        }
    ],
    "conditions": {
        "buy": {
            "operator": "AND",
            "rules": [
                {
                    "left": "rsi_14",
                    "operator": "<",
                    "right": 30
                },
                {
                    "left": "close",
                    "operator": "crosses_above",
                    "right": "sma_50"
                }
            ]
        },
        "sell": {
            "operator": "OR",
            "rules": [
                {
                    "left": "rsi_14",
                    "operator": ">",
                    "right": 70
                },
                {
                    "left": "close",
                    "operator": "crosses_below",
                    "right": "sma_50"
                }
            ]
        }
    }
}